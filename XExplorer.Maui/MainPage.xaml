<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XExplorer.Maui.MainPage">
<ContentPage.ToolbarItems>
    <ToolbarItem Text="加载" Clicked="OnFileMenuClicked" />
    <ToolbarItem Text="处理" Clicked="OnEditMenuClicked"/>
</ContentPage.ToolbarItems>
    <CollectionView ItemsSource="{Binding VideoModes}" VerticalOptions="FillAndExpand">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Text="{Binding Name}" />
                    <CollectionView ItemsSource="{Binding Snapshots}" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImageSource}" HeightRequest="100" WidthRequest="100"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
